<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PenColorDisplay"
    android:layout_width="350dp"
    android:layout_height="170dp"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/redSeekBarLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:textSize="26dp" />

        <SeekBar
            android:id="@+id/redSeekBar"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:max="255" />

        <TextView
            android:id="@+id/redSeekBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greenSeekBarLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:textSize="26dp" />

        <SeekBar
            android:id="@+id/greenSeekBar"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:max="255" />

        <TextView
            android:id="@+id/greenSeekBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blueSeekBarLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="26dp" />

        <SeekBar
            android:id="@+id/blueSeekBar"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:max="255" />

        <TextView
            android:id="@+id/blueSeekBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prevPenColor"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Old Color" />

        <Button
            android:id="@+id/newPenColor"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="New Color" />
    </LinearLayout>

</LinearLayout>